<% @user ||= current_user %>
    <div class="row">
     <div class="small-3 columns">
      <%= link_to gravatar_for(@user, size: 50), @user %>
     </div>
     <div class="small-9 columns">
      <h5><%= @user.name %></h5>
      <p><%= @user.player_type %>, level <%= @user.player_level %></p>
      <%= link_to "view profile", @user %>
     </div>
    </div>