   <% if @item.user === current_user %>
   <div class="row">
    <div class="small-12 small-centered columns">
     <ul class="button-group radius">
      <li><%= link_to 'Edit', edit_item_path(@item), class: "tiny button" %></li>
      <li><%= link_to 'Throw Away', item_throwaway_path(@item), class: "tiny button" %></li>
      <li><%= link_to 'Add a Component', item_add_path(@item), class: "tiny button" %></li>
     <% if current_user.admin? %>
      <li><%= link_to 'Admin View', item_admin_path(@item), class: "tiny button" %></li>
     <% end %>
     </ul>
    </div>
   </div>
   <% end %>

   <div class="row">
    <div class="small-3 columns">
    <% if @item.user === current_user %>
     <% if current_user.tester? %>
      <%= qrcode_for @item %>
     <% end %>
    <% end %>
    </div>
    <div class="small-9 columns">
      <ul>
        <li>TYPE: THING</li>
       <% if signed_in? %>
        <li>USER: <%= link_to @item.user.name, user_path(@item.user) %></li>
        <li>BOX/COLL: <%= link_to @item.parent.name, item_path(@item.parent) %><%=  %></li>
      <% end %>
      </ul>
     </div>
   </div>

   <% if @item.user === current_user %>
    <hr/>
    <div class="row">
     <div class="small-12 small-centered columns">
      <ul>
       <% @item.children.each do |t| %>
        <li><%= link_to t.name, t %></li>
       <% end %>
      </ul>
     </div>
    </div>
   <% end %>
