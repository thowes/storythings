
   <div class="row">
    <div class="small-12 small-centered columns">
     <ul class="button-group">
      <li><%= link_to 'Edit', edit_item_path(@item), class: "button tiny" %></li>
      <li><%= link_to 'Add to Box', item_add_path(@item.id), class: "button tiny" %></li>
      <li><%= link_to 'Throw Away', item_throwaway_path(@item), class: "button tiny" %></li>
     </ul>
    </div>
   </div>

   <div class="row">
    <div class="small-3 columns">
    <%= qrcode_for @item %>
    </div>
     <div class="small-9 columns">
      <ul>
       <li>TYPE: BOX</li>
       <% if signed_in? %>
       <li>USER: <%= @item.user.name %></li>
       <li>BOX/COLL: <%= @item.parent.name %></li>
       <li>CREATED: <%= @item.created_at %></li>
       <li>UPDATE: <%= @item.updated_at %></li>
       <% end %>
      </ul>
     </div>
   </div>

   <% if signed_in? %>
    <hr/>
    <div class="row">
     <div class="small-12 small-centered columns">
      <ul>
       <% @item.children.each do |t| %>
        <li>ITEM <%= link_to t.name, t %></li>
       <% end %>
      </ul>
     </div>
    </div>
   <% end %>
