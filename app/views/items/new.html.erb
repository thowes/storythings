<% provide(:title, 'Add New Item') %>
<h1>Add New Item</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@item) do |i| %>
    	<%= render 'shared/error_messages', object: i.object %>

      <%= i.label :name %>
      <%= i.text_field :name %>
      <%= i.hidden_field :is_a_box, :value => false %>
      <%= i.hidden_field :parent_id, :value => 1 %>

      <%= i.submit "Add Item", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>