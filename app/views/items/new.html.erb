<% provide(:title, 'Add New Item') %>
<h1>Add New Item</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@item) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit "Add Item", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>