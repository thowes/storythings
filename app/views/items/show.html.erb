<% provide(:title, @item.name) %>

   <div class="row">
    <div class="small-10 large-centered columns">
     <% if @item.root? %>
      <%= render 'items/show_root' %>
     <% else %>
      <% if @item.is_a_box %>
       <%= render 'items/show_box' %>
      <% else %>
       <%= render 'items/show_item' %>
      <% end %>
     <% end %>
   </div>
  </div>
