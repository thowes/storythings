<% provide(:title, @item.name) %>
<h1><%= @item.name %></h1>

<table>
 <% if @item.is_a_box %>
 <tr><td>TYPE:</td><td>BOX</td></tr>
 <% else %>
 <tr><td>TYPE:</td><td>ITEM</td></tr>
 <% end %>
 <tr><td>NAME:</td><td><%= @item.name %></td></tr>
 <tr><td>USER:</td><td><%= @item.user.name %></td></tr>
 <% if signed_in? %>
 <tr><td>PARENT:</td><td><%= @item.parent %></td></tr>
 <tr><td>ROOT:</td><td><%= @item.root %></td></tr>
 <tr><td>CHILDREN:</td><td><%= @item.children %></td></tr>
 <tr><td>CREATED:</td><td><%= @item.created_at %></td></tr>
 <tr><td>UPDATE:</td><td><%= @item.updated_at %></td></tr>
 <% end %>
</table>