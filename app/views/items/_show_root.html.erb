   <% if signed_in? %>
   <div class="row">
    <div class="small-12 small-centered columns">
     <ul class="button-group radius">
      <li><%= link_to 'Collections', coll_path, class: "tiny button" %></li>
      <li><%= link_to 'Edit', edit_item_path(@item), class: "tiny button" %></li>
      <li><%= link_to 'Add to Coll', item_add_path(@item), class: "tiny button" %></li>
     </ul>
    </div>
   </div>
   <% end %>

   <div class="row">
    <div class="small-3 columns">
     <%= qrcode_for @item %>
    </div>
    <div class="small-9 columns">
      <ul>
       <li>TYPE: COLLECTION</li>
       <% if signed_in? %>
       <li>COUNT: <%= @item.descendant_ids.count %></li>
       <li>USER: <%= link_to @item.user.name, user_path(@item.user) %></li>
       <li>CREATED:</td><td><%= @item.created_at %></li>
       <li>UPDATE:</td><td><%= @item.updated_at %></li>
       <% end %>
      </ul>
     </div>
   </div>

   <% if signed_in? %>
    <hr/>
    <div class="row">
     <div class="small-12 small-centered columns">
      <ul>
       <% @item.children.each do |t| %>
        <li><%= link_to t.name, t %></li>
       <% end %>
      </ul>
     </div>
    </div>
   <% end %>