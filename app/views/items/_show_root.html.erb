
   <div class="row">
    <div class="small-10 large-centered columns">
     <ul class="button-group">
      <li><%= link_to 'Edit', edit_item_path(@item), class: "button tiny" %></li>
      <li><%= link_to 'Add to Coll', item_add_path(@item), class: "button tiny" %></li>
     </ul>
    </div>
   </div>

   <div class="row">
    <div class="small-5 columns">
    <%= qrcode_for @item %>
    </div>
    <div class="small-5 columns">
      <ul>
       <li>TYPE: COLLECTION</li>
       <% if signed_in? %>
       <li>USER: <%= @item.user.name %></li>
       <li>CREATED:</td><td><%= @item.created_at %></li>
       <li>UPDATE:</td><td><%= @item.updated_at %></li>
       <% end %>
      </ul>
     </div>
   </div>

<% if signed_in? %>
 <hr/>
 <% @item.children.each do |t| %>
  <li>ITEM <%= link_to t.name, t %></li>
 <% end %>
<% end %>
