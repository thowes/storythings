<% provide(:title, "Admin: "+@item.name) %>

   <div class="row">
    <div class="small-12 small-centered columns">
     <ul class="button-group radius">
     <% if @item.root? %>
      <li><%= link_to "Change Owner of Item", items_path, class: "tiny button" %></li>
      <li><%= link_to "Change Parent into Digicoll", coll_path, class: "tiny button" %></li>
     <% else %>
      <li><%= link_to "Change into a Root Item", coll_path, class: "tiny button" %></li>
     <% end %>
     </ul>
    </div>
   </div>

   <div class="row">
    <div class="small-3 columns">
    </div>
     <div class="small-9 columns">
      <ul>
       <li>COUNT: <%= @item.descendant_ids.count %></li>
       <li>USER: <%= link_to @item.user.name, user_path(@item.user) %></li>
       <li>QRLINK: <%= link_to @item.qrlink, @item.qrlink %></li>
       <li>CREATED: <%= @item.created_at %></li>
       <li>UPDATE: <%= @item.updated_at %></li>
      </ul>
     </div>
   </div>
