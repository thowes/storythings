
   <div class="row">
    <div class="small-12 small-centered columns">
     <ul class="button-group radius">
      <li><%= link_to 'Edit', edit_item_path(@item), class: "tiny button" %></li>
      <li><%= link_to 'Throw Away', item_throwaway_path(@item), class: "tiny button" %></li>
     </ul>
    </div>
   </div>

   <div class="row">
    <div class="small-3 columns">
     <%= qrcode_for @item %>
    </div>
    <div class="small-9 columns">
      <ul>
       <li>TYPE: ITEM</li>
       <% if signed_in? %>
       <li>USER: <%= @item.user.name %></li>
       <li>BOX/COLL: <%= @item.parent.name %></li>
       <li>CREATED: <%= @item.created_at %></li>
       <li>UPDATE: <%= @item.updated_at %></li>
       <% end %>
      </ul>
     </div>
   </div>
