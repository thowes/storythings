<% provide(:title, @user.name) %>

<div class="row">
 <div class="large-6 columns">
  <%= render 'shared/user_info' %>
  <hr/>
  <%= render 'shared/stats' %>
  <hr/>
 </div>
 <div class="large-6 columns">
  <%= render 'follow_form' if signed_in? %>
  <% if @user.microposts.any? %>
   <h3>Activity (<%= @user.microposts.count %>)</h3>
   <ol class="microposts">
    <%= render @microposts %>
   </ol>
   <%= will_paginate @microposts %>    
  <% end %>
 </div>
</div>
