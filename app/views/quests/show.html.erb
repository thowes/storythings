<% provide(:title, @quest.name) %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @quest.name %>
</p>

<p>
  <strong>Quest Type:</strong>
  <%= @quest.qtype %>
</p>

<p>
  <strong>Mother:</strong>
  <%= @quest.mother %>
</p>

<p>
  <strong>Next Quest:</strong>
  <%= link_to @quest.next_quest, quest_path(@quest.next_quest) %>
</p>

<p>
  <strong>Prev Quest:</strong>
  <%= link_to @quest.prev_quest, quest_path(@quest.prev_quest) %>
</p>

   <div class="row">
    <div class="small-12 small-centered columns">
    <% if current_user.admin? %>
      <%= link_to 'Edit', edit_quest_path(@quest) %> |
    <% end %>
      <%= link_to 'Back', quests_path %>
    </div>
   </div>
   <div class="row">
    <div class="small-12 small-centered columns">
     <ul class="items">
      <%= render @experiences %>
     </ul>
    </div>
   </div>