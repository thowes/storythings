<% provide(:title, "Quests") %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Mother</th>
      <th>Next</th>
      <th>Prev</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @quests.each do |quest| %>
      <tr>
        <td><%= quest.name %></td>
        <td><%= quest.qtype %></td>
        <td><%= quest.mother %></td>
        <td><%= link_to quest.next_quest, quest_path(quest.next_quest) %></td>
        <td><%= link_to quest.prev_quest, quest_path(quest.prev_quest) %></td>
        <td><%= link_to 'Show', quest %>, <%= link_to 'Edit', edit_quest_path(quest) %>, <%= link_to 'Destroy', quest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quest', new_quest_path %>
